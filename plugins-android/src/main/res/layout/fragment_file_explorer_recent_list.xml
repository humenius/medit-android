<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.explorer.recent.FileExplorerRecentListFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/file_explorer__recent_files_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="328dp"
        tools:layout_editor_absoluteX="65dp" />

    <TextView
        android:id="@+id/file_explorer__recent_files_empty_alert"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="No files recently opened. Go open some!"
        android:gravity="center"
        android:fontFamily="sans-serif-light"
        android:textSize="20sp" />
</androidx.constraintlayout.widget.ConstraintLayout>