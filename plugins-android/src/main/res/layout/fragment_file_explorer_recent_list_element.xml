    <!--        android:id="@+id/file_explorer__recent_files_element_last_access"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="0dp"-->
    <!--        android:text="Last access date here"-->
    <!--        android:layout_weight="1" />-->

</LinearLayout>